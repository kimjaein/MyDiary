<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:id="@+id/item_layout"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <TextView
        android:id="@+id/calendar_item_day"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="17sp"
        android:text="날짜"
        android:paddingTop="0dp"
        android:textAlignment="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/calendar_item_color_first"
            android:layout_width="3dp"
            android:layout_height="17dp"
            android:textSize="15sp"
            android:background="#00000000"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <TextView
            android:id="@+id/calendar_item_first"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/calendar_item_color_second"
            android:layout_width="3dp"
            android:layout_height="17dp"
            android:textSize="15sp"
            android:background="#00000000"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <TextView
            android:id="@+id/calendar_item_second"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/calendar_item_color_third"
            android:layout_width="3dp"
            android:layout_height="17dp"
            android:textSize="15sp"
            android:background="#00000000"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <TextView
            android:id="@+id/calendar_item_third"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

</LinearLayout>