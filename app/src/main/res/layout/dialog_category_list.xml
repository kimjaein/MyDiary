<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/category_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:background="#4DB6AC"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ListView
        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category_dialog"
        app:layout_constraintBottom_toTopOf="@id/btn_close_category">

    </ListView>
    <Button
        android:id="@+id/btn_add_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_close_category"
        android:layout_margin="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#4DB6AC"
        />
    <Button
        android:id="@+id/btn_close_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닫기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#4DB6AC"
        />
</android.support.constraint.ConstraintLayout>