<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/btn_layout_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:id="@+id/btn_update_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="수정"
            />
        <Button
            android:id="@+id/btn_delete_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="삭제"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_title_read"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@id/btn_layout_read"
        android:src="@drawable/title"
        />
    <EditText
        android:id="@+id/edit_title_read"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/img_title_read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_layout_read"
        android:hint="제목"/>
    <Button
        android:id="@+id/selected_text_color_read"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:textSize="15sp"
        android:text="#f5b7e6"
        android:textColor="#00000000"
        android:background="#f5b7e6"
        app:layout_constraintBottom_toBottomOf="@id/img_title_read"
        app:layout_constraintTop_toTopOf="@id/img_title_read"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>

    <ImageView
        android:id="@+id/img_date_read"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_title_read"
        android:src="@drawable/date2"
        />
    <EditText
        android:id="@+id/edit_date_read"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/img_memo_read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_title_read"
        android:editable="false"
        android:hint="2018 - 01 - 01"/>


    <ImageView
        android:id="@+id/img_category_read"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_date_read"
        android:src="@drawable/group"
        />
    <EditText
        android:id="@+id/edit_category_read"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/img_memo_read"
        app:layout_constraintEnd_toEndOf="parent"
        android:editable="false"
        app:layout_constraintTop_toBottomOf="@id/img_date_read"
        android:text="선택 안함"
        />

    <ImageView
        android:id="@+id/img_memo_read"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingLeft="11dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="6dp"
        app:layout_constraintTop_toBottomOf="@id/img_category_read"
        android:src="@drawable/contents"
        />
    <EditText
        android:id="@+id/edit_memo_read"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/img_memo_read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_category_read"
        android:hint="내용"/>

</android.support.constraint.ConstraintLayout>